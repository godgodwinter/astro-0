--- 
import { ViewTransitions, fade ,slide} from "astro:transitions";
interface Props {
	title: string;
}

const { title } = Astro.props;

const anim = {
  old: {
    name: 'fadeIn',
    duration: '0.2s',
    easing: 'linear',
    fillMode: 'forwards',
  },
  new: {
    name: 'fadeOut',
    duration: '0.3s',
    easing: 'linear',
    fillMode: 'backwards',
  }
};

const myFade = {
  forwards: anim,
  backwards: anim,
};
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body data-theme="cupcake" class="min-h-screen" 
    transition:animate={fade({ duration: "0.5s" })}>
	
	<!-- <body data-theme="cupcake" class="min-h-screen" 
    transition:animate={myFade}> -->
	<div>
		<a href="/">Beranda</a>
		<a href="/transition">Transition</a>
		<a href="/about">About</a>
		<hr>
	</div>
		<slot />
	</body>
</html>